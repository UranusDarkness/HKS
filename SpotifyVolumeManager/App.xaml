<Application x:Class="SpotifyVolumeManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SpotifyVolumeManager"
             xmlns:views="clr-namespace:SpotifyVolumeManager.Views"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Light.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="HotKeyViewTemplate">
                <views:HotKeyUserControl/>
            </DataTemplate>
            <DataTemplate x:Key="UpdatesViewTemplate">
                <views:UpdatesUserControl/>
            </DataTemplate>

            <DataTemplate x:Key="InfoViewTemplate">
                <views:InfoUserControl/>
            </DataTemplate>
        </ResourceDictionary>

    </Application.Resources>
</Application>
